package day_18;
public class Day_18 {

    public static void main(String[] args) {
        int nilai1, nilai2, nilai3;
        nilai1 = 80;
        nilai2 = 95;
        nilai3 = 70;
        
        int total;
        total= (nilai1 + nilai2 + nilai3);
        System.out.println("Total nilai:" +total);
        
        double rata_rata;
        rata_rata = total / 3;
        System.out.println("Nilai rata-rata:" +rata_rata);
               
    }
    
}
